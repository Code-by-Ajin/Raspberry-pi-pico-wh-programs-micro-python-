from machine import Pin, time_pulse_us
import time

trigger = Pin(3, Pin.OUT)
echo = Pin(2, Pin.IN)

while True:
    trigger.low()
    time.sleep_us(2)
    trigger.high()
    time.sleep_us(10)
    trigger.low()
    
    duration = time_pulse_us(echo, 1, 30000)  
    distance = (duration * 0.0343) / 2   
    
    print("Distance:", distance, "cm")
    time.sleep(1)
